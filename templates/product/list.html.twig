{% extends 'home/index.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <h1>Product List</h1>
    <ul>
        {% for product in products %}
            <li>{{ product.name }} - {{ product.brand }} - ${{ product.price }} - <img src="{{ product.imgPath }}" alt="{{ product.name }}" width="50"></li>
        {% endfor %}
    </ul>
    <a href="{{ path('product_add') }}">Add New Product</a>
{% endblock %}